{
    "cluster": "datacamp-services",
    "servicePort": 3000,
    "serviceProtocol": "HTTP",
    "desiredCount": ${DESIRED_COUNT},
    "containers": [
      {
        "containerName": "${SERVICE}",
        "containerImage": "${SERVICE}",
        "containerTag": "${CIRCLE_SHA1}",
        "containerPort": 3000,
        "memoryReservation": 256,
        "essential": true
      }
    ],
    "healthCheck": {
      "healthyThreshold": 3,
      "unhealthyThreshold": 3,
      "path": "/",
      "interval": 60,
      "matcher": "200,301,302"
    },
    "ruleConditions": [
      {
        "hostname": "ast-viewer",
        "listeners": ["https"]
      }
    ]
  }